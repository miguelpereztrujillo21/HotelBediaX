<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/mid_margin">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_destination_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mid_margin"
        android:hint="@string/hint_destination_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_destination_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:text="" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_destination_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mid_margin"
        android:hint="@string/hint_destination_desc">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dialog_destination_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
        android:text="" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_date_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mid_margin"
        android:hint="@string/hint_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:text="" />

    </com.google.android.material.textfield.TextInputLayout>
    <Spinner
        android:id="@+id/dialog_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mid_margin"
        android:layout_marginVertical="10dp"/>
</LinearLayout>